var offX:Float = -1000/2;
var offY:Float = -500/2;

function onLoad(stage, foreground){
	state.camGame.bgColor = 0xFF9AD9EA;

	var cave = new FlxSprite(offX + 711, offY + 25);
	cave.loadGraphic(Paths.image("stage1/stage1 cave"));	
	cave.scrollFactor.set(0.75, 0.75);
	stage.add(cave);

	var ground = new FlxSprite(offX, offY + 710);
	ground.loadGraphic(Paths.image("stage1/stage1 ground"));	
	ground.scrollFactor.set(1, 0.95);
	stage.add(ground);
}