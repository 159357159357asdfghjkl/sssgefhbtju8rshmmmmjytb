var offX = -1000/2;
var offY = -500/2;

function onLoad(stage){
	state.camGame.bgColor = 0x9AD9EA;
	
	var back = new FlxSprite(offX + 711, offY + 25);
	back.loadGraphic(Paths.image("stage4/back"));
	back.scrollFactor.set(0.75, 0.75);
	stage.add(back);

	var ground = new FlxSprite(offX, offY + 710);
	ground.loadGraphic(Paths.image("stage4/ground"));	
	ground.scrollFactor.set(1, 0.95);
	stage.add(ground);
}